<div class="banner">

  <div class = "signupcontainer" >
    <div id="logo"> <%= image_tag("logo_black.png") %> </div>
    <h2>Hey there! </h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "myclass"}) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, required: true, autofocus: true , label_html: { class: 'form_input' } %>
        <%= f.input :email, required: true, autofocus: true , label_html: { class: 'form_input' } %>
        <%= f.input :picture , label_html: { class: 'btn btn-primary' }, input_html: { class: 'hidden' }  %>
        <%= f.input :picture_cache, as: :hidden %>
        <%= f.input :password, required: true,  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),label_html: { class: 'form_input' }   %>
        <%= f.input :password_confirmation, required: true, label_html: { class: 'form_input' }  %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn-primary"%>
      </div>
    <% end %>

    <%= render "devise/shared/links"%>
  </div>

</div>



