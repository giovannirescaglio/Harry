<div class="formbanner">
  <div class = "signupcontainer" >
    <div class="row">

      <div id="logo"> <%= image_tag("logo_black.png") %> </div>
      <h2>Hey there! </h2>
      <%= link_to root_path, id: "close_btn_signup" do %>
        <i class="far fa-times-circle fa-lg"></i>
      <% end %>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, required: true, autofocus: true, label:false, placeholder:"first name"  %>
          <%= f.input :email, required: true, autofocus: true , label:false, placeholder:"email" %>
          <%= f.input :password, required: true,  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label:false, placeholder:"password"  %>
          <%= f.input :password_confirmation, required: true, label:false, placeholder:"confirm your password"  %>
          <%= f.input :picture , label_html: { class: 'button_secondary' }, input_html: { class: 'hidden' }, label:"Upload picture"  %>
          <%= f.input :picture_cache, as: :hidden %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "button_primary"%>
        </div>
      <% end %>

      <%= render "devise/shared/links"%>
    </div>
   </div>

</div>



